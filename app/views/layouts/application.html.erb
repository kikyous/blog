<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand pjax" href="/">
            Blog
          </a>
          <div class="nav-collapse">
            <ul class="nav pull-right">
              <% if current_user %>
                <% if can? :create ,Post %>
                  <li> <a href=<%= new_post_path %> ><i class="icon-plus"></i> New post</a> </i> </li>
                <% end %>
                <% if can? :access, :rails_admin %>
                  <li><a href="/admin">Dashboard</a></li>
                <% end %>
                <li><%= link_to current_user.email, "/admin/user/#{current_user.id}/edit" %></li>
                <li><a href="/users/sign_out" data-method="delete" rel="nofollow"><span class="label label-important">Log out</span></a></li>
                <li><img alt="A948e6e068754e437c4047a2a693f659?s=30" src="http://www.gravatar.com/avatar/a948e6e068754e437c4047a2a693f659?s=30" style="padding-top:5px"></li>
              <% else %>
                <li><a href="/users/sign_in"><span class="label label-important">Sign In</span></a></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="jumbotron masthead">
      <div class="container">
        <a href="http://thehungrycoder.com/">
          <img src="http://thehungrycoder.com/uploads/2012/11/cropped-lungi.jpg" class="header-image" width="1196" height="293" alt="">
        </a>
      </div>
    </div>
    <div class="container">
      <% if notice %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= notice %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
